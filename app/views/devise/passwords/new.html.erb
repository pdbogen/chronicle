<div class='col-md-4'></div>
<div class='col-md-4'>
	<h2 class="form-signin-heading">Forgot your password?</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signup", role: "form" }) do |f| %>

	<span class='instructions'>We'll send you an email and get you back on track. Just fill in your e-mail address below.</span>

	<% if devise_error_messages! != "" %>
		<div class="alert alert-danger"><p class="alert"><%= devise_error_messages! %></p></div>
	<% end %>

	<%= f.email_field :email, autofocus: true, class: "form-control email", placeholder: "E-Mail Address", required: true %>

	<div><%= f.submit "Reset Password", class: "btn btn-large btn-primary btn-block" %></div>
	<% end %>
	<%= render "devise/shared/links" %>
</div>
